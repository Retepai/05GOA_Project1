<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="182dp"
                    android:layout_marginTop="21dp"
                    android:fontFamily="@font/prompt"
                    android:text="FORM"
                    android:textColor="#FF000000"
                    android:textSize="18sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/public_sans"
                    android:text="Age"
                    android:textColor="#FF000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/age_edit_text_box"
                        android:layout_width="347dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/rounded_rectangle2" />

                    <EditText
                        android:id="@+id/age_edit_text"
                        android:layout_width="327dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="52dp"
                        android:layout_marginTop="8dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/public_sans"
                        android:hint="Age"
                        android:textSize="16sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/age_valid_number_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/public_sans"
                    android:text="Please enter a valid number"
                    android:textColor="#D92C2C"
                    android:textSize="13sp"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/public_sans"
                    android:text="City/Town"
                    android:textColor="#FF000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/city_edit_text_box"
                        android:layout_width="347dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/rounded_rectangle2" />

                    <EditText
                        android:id="@+id/city_edit_text"
                        android:layout_width="327dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="52dp"
                        android:layout_marginTop="8dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/public_sans"
                        android:hint="City"
                        android:textSize="16sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/city_valid_word_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/public_sans"
                    android:text="Please enter a valid city"
                    android:textColor="#D92C2C"
                    android:textSize="13sp"
                    android:visibility="gone"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="31dp"
                    android:fontFamily="@font/public_sans"
                    android:text="Drivers Licence"
                    android:textColor="#FF000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/drivers_licence_radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="68dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/drivers_licence_radio_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:text="Yes"
                        android:textColor="#FF000000"
                        android:textSize="16sp" />
                    <!--                        android:onClick="onRadioButtonClicked"-->

                    <RadioButton
                        android:id="@+id/drivers_licence_radio_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/public_sans"
                        android:text="No"
                        android:textColor="#FF000000"
                        android:textSize="16sp" />
                    <!--                    android:onClick="onRadioButtonClicked"-->

                </RadioGroup>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/public_sans"
                    android:text="Certifications"
                    android:textColor="#FF000000"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="56dp"
                    android:fontFamily="@font/public_sans"
                    android:text="Select certifications you currently have"
                    android:textColor="#FF333333"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="85dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="0dp">

                        <Button
                            android:id="@+id/get_wet_certification"
                            android:layout_width="81dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="62dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/rounded_rectangle3"
                            android:fontFamily="@font/public_sans"
                            android:text="Get Wet"
                            android:textColor="#FFFFFFFF"
                            android:textSize="13sp"
                            android:textAllCaps="false"/>

                        <Button
                            android:id="@+id/first_aid_certification"
                            android:layout_width="83dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/rounded_rectangle3"
                            android:fontFamily="@font/public_sans"
                            android:text="First Aid"
                            android:textColor="#FFFFFFFF"
                            android:textSize="13sp"
                            android:textAllCaps="false"/>

                        <Button
                            android:id="@+id/food_safe_certification"
                            android:layout_width="94dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/rounded_rectangle3"
                            android:fontFamily="@font/public_sans"
                            android:text="Food Safe"
                            android:textColor="#FFFFFFFF"
                            android:textSize="13sp"
                            android:textAllCaps="false"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="9dp">

                        <Button
                            android:id="@+id/forklift_operator_certification"
                            android:layout_width="177dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="58dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/rounded_rectangle3"
                            android:fontFamily="@font/public_sans"
                            android:text="Forklift Operator Licence"
                            android:textColor="#FFFFFFFF"
                            android:textSize="13sp"
                            android:textAllCaps="false"/>

                        <Button
                            android:id="@+id/babysitting_certification"
                            android:layout_width="102dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/rounded_rectangle3"
                            android:fontFamily="@font/public_sans"
                            android:text="Babysitting"
                            android:textColor="#FFFFFFFF"
                            android:textSize="13sp"
                            android:textAllCaps="false"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="201dp"
                    android:fontFamily="@font/public_sans"
                    android:text="Languages"
                    android:textColor="#FF000000"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="226dp"
                    android:fontFamily="@font/public_sans"
                    android:text="Select languages you are proficient in"
                    android:textColor="#FF333333"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="252dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="0dp">

                        <Button
                            android:id="@+id/english_language"
                            android:layout_width="77dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="62dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/rounded_rectangle3"
                            android:fontFamily="@font/public_sans"
                            android:text="English"
                            android:textColor="#FFFFFFFF"
                            android:textSize="13sp"
                            android:textAllCaps="false"/>

                        <Button
                            android:id="@+id/japanese_language"
                            android:layout_width="88dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/rounded_rectangle3"
                            android:fontFamily="@font/public_sans"
                            android:text="Japanese"
                            android:textColor="#FFFFFFFF"
                            android:textSize="13sp"
                            android:textAllCaps="false"/>

                        <Button
                            android:id="@+id/french_language"
                            android:layout_width="74dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/rounded_rectangle3"
                            android:fontFamily="@font/public_sans"
                            android:text="French"
                            android:textColor="#FFFFFFFF"
                            android:textSize="13sp"
                            android:textAllCaps="false"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="9dp">

                        <Button
                            android:id="@+id/russian_language"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="39dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/rounded_rectangle3"
                            android:fontFamily="@font/public_sans"
                            android:text="Russian"
                            android:textColor="#FFFFFFFF"
                            android:textSize="13sp"
                            android:textAllCaps="false"/>

                        <Button
                            android:id="@+id/portuguese_language"
                            android:layout_width="102dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/rounded_rectangle3"
                            android:fontFamily="@font/public_sans"
                            android:text="Portuguese"
                            android:textColor="#FFFFFFFF"
                            android:textSize="13sp"
                            android:textAllCaps="false"/>

                        <Button
                            android:id="@+id/hindi_language"
                            android:layout_width="66dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/rounded_rectangle3"
                            android:fontFamily="@font/public_sans"
                            android:text="Hindi"
                            android:textColor="#FFFFFFFF"
                            android:textSize="13sp"
                            android:textAllCaps="false"/>

                        <Button
                            android:id="@+id/korean_language"
                            android:layout_width="75dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/rounded_rectangle3"
                            android:fontFamily="@font/public_sans"
                            android:text="Korean"
                            android:textColor="#FFFFFFFF"
                            android:textSize="13sp"
                            android:textAllCaps="false"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="9dp">

                        <Button
                            android:id="@+id/german_language"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="62dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/rounded_rectangle3"
                            android:fontFamily="@font/public_sans"
                            android:text="German"
                            android:textColor="#FFFFFFFF"
                            android:textSize="13sp"
                            android:textAllCaps="false"/>

                        <Button
                            android:id="@+id/spanish_language"
                            android:layout_width="81dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/rounded_rectangle3"
                            android:fontFamily="@font/public_sans"
                            android:text="Spanish"
                            android:textColor="#FFFFFFFF"
                            android:textSize="13sp"
                            android:textAllCaps="false"/>

                        <Button
                            android:id="@+id/chinese_language"
                            android:layout_width="81dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="135dp"
                            android:background="@drawable/rounded_rectangle3"
                            android:fontFamily="@font/public_sans"
                            android:text="Chinese"
                            android:textColor="#FFFFFFFF"
                            android:textSize="13sp"
                            android:textAllCaps="false"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginTop="564dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/rectangle1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/next_form_button"
            android:layout_width="347dp"
            android:layout_height="57dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:fontFamily="sans-serif"
            android:text="Go to Next Page"
            android:textColor="#193D6D"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:background="@drawable/rounded_rectangle4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>
