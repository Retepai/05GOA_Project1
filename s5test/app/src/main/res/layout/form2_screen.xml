<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/form2_back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="23dp"
                    android:fontFamily="@font/public_sans"
                    android:text="Back"
                    android:textColor="#FF000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="182dp"
                    android:layout_marginTop="21dp"
                    android:fontFamily="@font/prompt"
                    android:text="FORM"
                    android:textColor="#FF000000"
                    android:textSize="18sp"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="37dp"
                        android:fontFamily="sans-serif"
                        android:text="Days Available"
                        android:textColor="#FF000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/monday_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif"
                        android:text="Monday"
                        android:textColor="#FF000000"
                        android:textSize="16sp" />
                    <!--                    android:onClick="onCheckBoxClicked"-->
                    <CheckBox
                        android:id="@+id/tuesday_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif"
                        android:text="Tuesday"
                        android:textColor="#FF000000"
                        android:textSize="16sp" />
                    <!--                    android:onClick="onCheckBoxClicked"-->
                    <CheckBox
                        android:id="@+id/wednesday_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif"
                        android:text="Wednesday"
                        android:textColor="#FF000000"
                        android:textSize="16sp" />
                    <!--                    android:onClick="onCheckBoxClicked"-->
                    <CheckBox
                        android:id="@+id/thursday_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif"
                        android:text="Thursday"
                        android:textColor="#FF000000"
                        android:textSize="16sp" />
                    <!--                    android:onClick="onCheckBoxClicked"-->
                    <CheckBox
                        android:id="@+id/friday_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif"
                        android:text="Friday"
                        android:textColor="#FF000000"
                        android:textSize="16sp" />
                    <!--                    android:onClick="onCheckBoxClicked"-->
                    <CheckBox
                        android:id="@+id/saturday_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif"
                        android:text="Saturday"
                        android:textColor="#FF000000"
                        android:textSize="16sp" />
                    <!--                    android:onClick="onCheckBoxClicked"-->
                    <CheckBox
                        android:id="@+id/sunday_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif"
                        android:text="Sunday"
                        android:textColor="#FF000000"
                        android:textSize="16sp" />
                    <!--                    android:onClick="onCheckBoxClicked"-->
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/public_sans"
                    android:text="Main Interests"
                    android:textColor="#FF000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="56dp"
                    android:fontFamily="@font/public_sans"
                    android:text="Select tags that are associated with your interests"
                    android:textColor="#FF333333"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="85dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="0dp">

                        <Button
                            android:id="@+id/business_interest"
                            android:layout_width="86dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="78.5dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/rounded_rectangle3"
                            android:fontFamily="@font/public_sans"
                            android:text="Business"
                            android:textColor="#FFFFFFFF"
                            android:textSize="13sp"
                            android:textAllCaps="false"/>

                        <Button
                            android:id="@+id/arts_interest"
                            android:layout_width="160dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/rounded_rectangle3"
                            android:fontFamily="@font/public_sans"
                            android:text="Arts &amp; Entertainment"
                            android:textColor="#FFFFFFFF"
                            android:textSize="13sp"
                            android:textAllCaps="false"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="9dp">

                        <Button
                            android:id="@+id/autos_interest"
                            android:layout_width="133dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="46.5dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/rounded_rectangle3"
                            android:fontFamily="@font/public_sans"
                            android:text="Autos &amp; Vehicles"
                            android:textColor="#FFFFFFFF"
                            android:textSize="13sp"
                            android:textAllCaps="false"/>

                        <Button
                            android:id="@+id/computers_interest"
                            android:layout_width="183dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/rounded_rectangle3"
                            android:fontFamily="@font/public_sans"
                            android:text="Computers &amp; Technology"
                            android:textColor="#FFFFFFFF"
                            android:textSize="13sp"
                            android:textAllCaps="false"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="9dp">

                        <Button
                            android:id="@+id/finance_interest"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/rounded_rectangle3"
                            android:fontFamily="@font/public_sans"
                            android:text="Finance"
                            android:textColor="#FFFFFFFF"
                            android:textSize="13sp"
                            android:textAllCaps="false"/>

                        <Button
                            android:id="@+id/video_games_interest"
                            android:layout_width="111dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/rounded_rectangle3"
                            android:fontFamily="@font/public_sans"
                            android:text="Video Games"
                            android:textColor="#FFFFFFFF"
                            android:textSize="13sp"
                            android:textAllCaps="false"/>

                        <Button
                            android:id="@+id/fitness_interest"
                            android:layout_width="127dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/rounded_rectangle3"
                            android:fontFamily="@font/public_sans"
                            android:text="Fitness &amp; Sports"
                            android:textColor="#FFFFFFFF"
                            android:textSize="13sp"
                            android:textAllCaps="false"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="9dp">

                        <Button
                            android:id="@+id/books_interest"
                            android:layout_width="144dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="53.5dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/rounded_rectangle3"
                            android:fontFamily="@font/public_sans"
                            android:text="Books &amp; Literature"
                            android:textColor="#FFFFFFFF"
                            android:textSize="13sp"
                            android:textAllCaps="false"/>

                        <Button
                            android:id="@+id/home_interest"
                            android:layout_width="146dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/rounded_rectangle3"
                            android:fontFamily="@font/public_sans"
                            android:text="Home &amp; Gardening"
                            android:textColor="#FFFFFFFF"
                            android:textSize="13sp"
                            android:textAllCaps="false"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="9dp">

                        <Button
                            android:id="@+id/humanitarian_aid_interest"
                            android:layout_width="138dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="75dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/rounded_rectangle3"
                            android:fontFamily="@font/public_sans"
                            android:text="Humanitarian Aid"
                            android:textColor="#FFFFFFFF"
                            android:textSize="13sp"
                            android:textAllCaps="false"/>

                        <Button
                            android:id="@+id/construction_interest"
                            android:layout_width="110dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="19dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="135dp"
                            android:background="@drawable/rounded_rectangle3"
                            android:fontFamily="@font/public_sans"
                            android:text="Construction"
                            android:textColor="#FFFFFFFF"
                            android:textSize="13sp"
                            android:textAllCaps="false"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginTop="564dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/rectangle1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/submit_form_button"
            android:layout_width="347dp"
            android:layout_height="57dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:fontFamily="sans-serif"
            android:text="Submit Form"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:background="@drawable/rounded_rectangle1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>
