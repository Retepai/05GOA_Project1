<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="340dp"
                    android:layout_height="288dp"
                    android:layout_marginStart="31dp"
                    android:layout_marginTop="201dp"
                    android:background="@drawable/vinder_logo" />

                <ImageView
                    android:id="@+id/vinder"
                    android:layout_width="162dp"
                    android:layout_height="73dp"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="51dp"
                    android:background="@drawable/vinder_name" />

                <Button
                    android:id="@+id/get_started_button"
                    android:layout_width="347dp"
                    android:layout_height="57dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="503dp"
                    android:background="@drawable/rounded_rectangle1"
                    android:fontFamily="sans-serif"
                    android:text="Let's get started"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFFFF"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/the_easier_"
                    android:layout_width="206dp"
                    android:layout_height="19dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="102dp"
                    android:layout_marginTop="124dp"
                    android:fontFamily="@font/public_sans"
                    android:gravity="center_horizontal|top"
                    android:text="The easier way to volunteer"
                    android:textColor="@color/black" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>